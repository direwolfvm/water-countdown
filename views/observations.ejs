<section class="card">
  <div class="card-header">
    <div>
      <h2>All observations</h2>
      <p class="muted"><%= selectedFountain ? selectedFountain.name : "No fountain selected" %></p>
    </div>
    <div class="inline-form">
      <% if (fountains.length > 0) { %>
        <form method="GET" action="/observations" class="inline-form">
          <label for="fountain_id_manage" class="sr-only">Select fountain</label>
          <select id="fountain_id_manage" name="fountain_id">
            <% fountains.forEach((fountain) => { %>
              <option value="<%= fountain.id %>" <%= selectedFountain && fountain.id === selectedFountain.id ? "selected" : "" %>>
                <%= fountain.name %>
              </option>
            <% }); %>
          </select>
          <button type="submit" class="button">Switch</button>
        </form>
      <% } %>
      <% if (editMode) { %>
        <a class="button button-secondary" href="/observations?<%= selectedFountain ? `fountain_id=${selectedFountain.id}` : "" %>">Exit edit mode</a>
      <% } else { %>
        <a class="button" href="/observations?<%= selectedFountain ? `fountain_id=${selectedFountain.id}&edit=1` : "edit=1" %>">Edit mode</a>
      <% } %>
    </div>
  </div>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <% if (editMode) { %>
    <form method="POST" action="/observations/bulk">
      <input type="hidden" name="fountain_id" value="<%= selectedFountain ? selectedFountain.id : "" %>" />
  <% } %>
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Value</th>
            <% if (editMode) { %>
              <th>Delete</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (observations.length === 0) { %>
            <tr>
              <td colspan="<%= editMode ? 4 : 3 %>" class="muted">No observations yet.</td>
            </tr>
          <% } %>
          <% observations.forEach((obs) => { %>
            <tr>
              <td><%= obs.id %></td>
              <td><%= new Date(obs.observed_at).toISOString().replace("T", " ").slice(0, 19) %></td>
              <td>
                <% if (editMode) { %>
                  <input type="hidden" name="id" value="<%= obs.id %>" />
                  <input class="inline-input" type="number" step="0.01" name="value_<%= obs.id %>" value="<%= obs.value %>" />
                <% } else { %>
                  <%= obs.value %>
                <% } %>
              </td>
              <% if (editMode) { %>
                <td>
                  <input type="checkbox" name="delete_<%= obs.id %>" />
                </td>
              <% } %>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% if (editMode) { %>
      <div class="form-actions">
        <label class="delete-confirmation" for="delete_password">
          Delete password
          <input type="password" id="delete_password" name="delete_password" placeholder="fountain" />
        </label>
        <button type="submit" class="button">Save changes</button>
        <a class="button button-secondary" href="/observations?<%= selectedFountain ? `fountain_id=${selectedFountain.id}` : "" %>">Cancel</a>
      </div>
    <% } %>
  <% if (editMode) { %>
    </form>
  <% } %>
</section>

<section class="card">
  <h2>Fountains</h2>
  <% if (fountainError) { %>
    <p class="error"><%= fountainError %></p>
  <% } %>
  <form method="POST" action="/observations/fountains" class="form-row fountain-form">
    <input type="hidden" name="fountain_id" value="<%= selectedFountain ? selectedFountain.id : "" %>" />
    <label for="name">Fountain name</label>
    <input type="text" id="name" name="name" required />
    <label for="target">Target</label>
    <input type="number" step="0.01" id="target" name="target" required />
    <button type="submit" class="button">Add fountain</button>
  </form>
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Target</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if (fountains.length === 0) { %>
          <tr>
            <td colspan="3" class="muted">No fountains yet.</td>
          </tr>
        <% } %>
        <% fountains.forEach((fountain) => { %>
          <tr>
            <td><%= fountain.name %></td>
            <td><%= fountain.target %></td>
            <td>
              <form method="POST" action="/observations/fountains/<%= fountain.id %>/delete" class="inline-form">
                <label class="sr-only" for="delete_fountain_<%= fountain.id %>">Delete password</label>
                <input type="password" id="delete_fountain_<%= fountain.id %>" name="delete_password" placeholder="fountain" />
                <button type="submit" class="button button-secondary">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</section>

<section class="card">
  <h2>Add observation</h2>
  <form method="POST" action="/observations" class="form-row">
    <input type="hidden" name="fountain_id" value="<%= selectedFountain ? selectedFountain.id : "" %>" />
    <label for="value">Counter value</label>
    <input type="number" step="0.01" id="value" name="value" required />
    <button type="submit" class="button">Add</button>
  </form>
</section>
