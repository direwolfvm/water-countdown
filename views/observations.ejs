<section class="card">
  <div class="card-header">
    <h2>All observations</h2>
    <% if (editMode) { %>
      <a class="button" href="/observations">Exit edit mode</a>
    <% } else { %>
      <a class="button" href="/observations?edit=1">Edit mode</a>
    <% } %>
  </div>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <% if (editMode) { %>
    <form method="POST" action="/observations/bulk">
  <% } %>
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Value</th>
            <% if (editMode) { %>
              <th>Delete</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (observations.length === 0) { %>
            <tr>
              <td colspan="<%= editMode ? 4 : 3 %>" class="muted">No observations yet.</td>
            </tr>
          <% } %>
          <% observations.forEach((obs) => { %>
            <tr>
              <td><%= obs.id %></td>
              <td><%= new Date(obs.observed_at).toISOString().replace("T", " ").slice(0, 19) %></td>
              <td>
                <% if (editMode) { %>
                  <input type="hidden" name="id" value="<%= obs.id %>" />
                  <input class="inline-input" type="number" step="0.01" name="value_<%= obs.id %>" value="<%= obs.value %>" />
                <% } else { %>
                  <%= obs.value %>
                <% } %>
              </td>
              <% if (editMode) { %>
                <td>
                  <input type="checkbox" name="delete_<%= obs.id %>" />
                </td>
              <% } %>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% if (editMode) { %>
      <div class="form-actions">
        <button type="submit" class="button">Save changes</button>
        <a class="button button-secondary" href="/observations">Cancel</a>
      </div>
    <% } %>
  <% if (editMode) { %>
    </form>
  <% } %>
</section>

<section class="card">
  <h2>Add observation</h2>
  <form method="POST" action="/observations" class="form-row">
    <label for="value">Counter value</label>
    <input type="number" step="0.01" id="value" name="value" required />
    <button type="submit" class="button">Add</button>
  </form>
</section>
